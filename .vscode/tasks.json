{
  "tasks": [
    {
      "type": "process",
      "label": "C/C++: make.exe 生成活动文件",
      "command": "make.exe",
      "args": ["debug", "-j12"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "process",
      "label": "C/C++: g++.exe 生成活动文件",
      "command": "g++.exe",
      "args": [
        "-std=c++17",
        "-Wall",
        "-O0",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
